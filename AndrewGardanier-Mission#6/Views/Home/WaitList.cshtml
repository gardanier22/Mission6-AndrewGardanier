@{
}

@model List<MovieInfo>

<div>
    <table class="table table-striped table-bordered">
        <thead class="fw-bold">
            <tr>
                <td>CategoryName</td>
                <td>MovieTitle</td>
                <td>MovieYear</td>
                <td>Director</td>
                <td>CoDirector</td>
                <td>Rating</td>
                <td>Edited</td>
                <td>LentTo</td>
                <td>CopiedToPlex</td>
                <td>Notes</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Category?.CategoryName</td>
                    <td>@x.MovieTitle</td>
                    <td>@x.MovieYear</td>
                    <td>@x.Director</td>
                    <td>@x.CoDirector</td>
                    <td>@x.Rating</td>
                    <td>@x.Edited</td>
                    <td>@x.LentTo</td>
                    <td>@x.CopiedToPlex</td>
                    <td>@x.Notes</td>

                    <td>
                        <a class="btn btn-info btn-circle" asp-controller="Home" asp-action="Edit" asp-route-id="@x.MovieID">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger btn-circle" asp-controller="Home" asp-action="Delete" asp-route-id="@x.MovieID">
                            <i class="fas fa-trash-alt"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


