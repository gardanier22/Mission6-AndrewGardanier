@{
}
@model MovieInfo

<h1>Enter a Movie</h1>

<form method="post">

    <label asp-for="Category">Category:</label>
    <Input asp-for="Category" />
    <br />
    <label asp-for="SubCategory">SubCategory:</label>
    <input asp-for="SubCategory" />
    <br />
    <label asp-for="MovieTitle">Movie Title:</label>
    <input asp-for="MovieTitle" />
    <br />
    <label asp-for="MovieYear">Year:</label>
    <input asp-for="MovieYear" />
    <br />
    <label asp-for="Director">Director:</label>
    <input asp-for="Director" />
    <br />
    <label asp-for="CoDirector">Codirector:</label>
    <input asp-for="CoDirector" />
    <br />
    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />
    <label asp-for="Edited">Has the film been edited</label>
    <select asp-for="Edited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <label asp-for="LentTo">Who have you lent it to:</label>
    <input asp-for="LentTo" />
    <br />
    <label asp-for="Notes">Notes:</label>
    <input asp-for="Notes" />
    <button type="submit">Submit Application</button>

</form>
